/*Bu Program Klavyeden Girilen 4 Haneli Bir Tam Sayıyı Çözümler.*/
#include<stdio.h>
#include<conio.h>
void main()
{ 
	int sayi,binlik,yuzluk,onluk,birlik;
	printf(" =Tam Sayi Cozumleme Programi=\n\n");
	for(;;)
	{
		printf(" Lutfen 4 Basamakli Bir Tam Sayi Giriniz:");
		scanf("%d",&sayi);
		if(sayi>999 && sayi<10000) //Girilen sayının dört basamaklı olması haliden if komutu çalışır.
		{ 
			binlik=sayi/1000; //Sayıyı basamaklarına ayırma işlemleri.
			yuzluk=(sayi-(binlik*1000))/100;
			onluk=(sayi-(binlik*1000)-(yuzluk*100))/10;
			birlik=(sayi-(binlik*1000)-(yuzluk*100)-(onluk*10));
			printf("\n Cozumlenen Sayi= %d\n",sayi);
			printf("\n Bu Sayida;\n");
			printf(" %d Tane Binlik Sayi\n",binlik);
			printf(" %d Tane Yuzluk Sayi\n",yuzluk);  
			printf(" %d Tane Onluk Sayi\n",onluk);
			printf(" %d Tane Birlik Sayi Vardir.\n",birlik);
			break;
		}
		else //Girilen sayının dört basamaklı olmaması halinde else komutu çalışır.
		{
			printf("\n Girdiginiz Sayi 4 Basamakli Bir Tam Sayi Degildir.\n Lutfen Tekrar 4 Basamakli Bir Tam Sayi Giriniz.\n\n");
			continue;
		}
	 }
	 printf("\n Programi sonlandirmak icin bir tusa basiniz.");
	 getch();
}

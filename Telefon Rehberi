/*Bu Program Telefon Rehberi Programıdır.*/
#include<stdio.h>
#include<conio.h>
#include<string.h>
#include<Windows.h> /*Sleep() ve system("CLS") fonksiyonları için Windows kütüphanesi çağrılmaktadır.*/
struct kisi /*struct yapıları tanımlanmaktadır.*/
{
char ad[BUFSIZ];
char soyad[BUFSIZ];
char evtel[BUFSIZ];
char ceptel[BUFSIZ];
char istel[BUFSIZ];
char eposta[BUFSIZ];
char adres[BUFSIZ];
char dogumtarihi[BUFSIZ];
}kisiler[BUFSIZ],yedek[BUFSIZ],silinecek[BUFSIZ];

void kisiekle(); /*Telefon rehberi için gerekli fonksiyonlar tanımlanmaktadır.*/
void kisigoruntule();
void kisiguncelle();
void kisisil();
void kisiarama();
void cıkıs();
int sayac=0; /*Global değişken olarak sayac tanımlanmaktadır.*/

void main() /*Ana fonksiyon. Programın başladığı ve kontrol edildiği fonksiyon.*/
{   
	int secim;
	printf("\n\t\t\t=-=-=-TELEFON REHBERI-=-=-=\n\n");
	printf("\t\t\t===========================\n");
	printf("\n\t\t\t==Telefon Rehberi Menusu==");
	printf("\n\t\t\t--------------------------");
	printf("\n\n\t\t\t (1) --Kisi Ekleme--");
	printf("\n\t\t\t (2) --Kisi Goruntuleme--");
	printf("\n\t\t\t (3) --Kisi Guncelleme--");
	printf("\n\t\t\t (4) --Kisi Silme--");
	printf("\n\t\t\t (5) --Kisi Arama--");
	printf("\n\t\t\t (6) --Cikis--\n");
	printf("\n\t\t\t===========================");
	printf("\n\n\t\t Lutfen Gerceklestirmek Istediginiz Islemi Seciniz:");
	scanf("%d",&secim);
	fflush(stdin); /*Girilen veri değişkene aktarıldıktan sonra gerekli alan boşaltılmaktadır.*/
	switch(secim) /*Telefon Rehberi Menüsü İçin switch-case yapısı kullanılmaktadır.*/
	{
	case 1:
		system("CLS");
		printf("\n -Kisi Ekleme- \n");
		printf(" =============\n");
		kisiekle();
		printf("\n\n");
		main();
		break;

	case 2:
		system("CLS");
		printf("\n -Kisi Goruntuleme- \n");
		printf(" ==================\n");
		kisigoruntule();
		printf("\n\n");
		main();
		break;

	case 3:
		system("CLS");
		printf("\n -Kisi Guncelleme- \n");
		printf(" =================\n");
		kisiguncelle();
		system("CLS");
		printf("\n\n");
		main();
		break;

	case 4:
		system("CLS");
		printf("\n -Kisi Silme- \n");
		printf(" ============\n");
		kisisil();
		printf("\n\n");
		main();
		break;

	case 5:
		system("CLS");
		printf("\n -Kisi Arama- \n");
		printf(" ============\n");
		kisiarama();
		printf("\n\n");
		main();
		break;

	case 6:
		system("CLS");
		cıkıs();
		break;

	default:
		printf("\n\t\t Boyle Bir Secenek Bulunmamaktadir.");
		printf("\n\t\t Lutfen Bekleyiniz...");
		Sleep(2000);
		system("CLS");
	        main();
		break;
	}
}

void kisiekle() /*Kişi ekleme fonksiyonu.*/
{
	char kontrol;
	FILE *telefonrehberi; /*File tipinde, telefonrehberi adında bir pointer tanımlanmaktadır.*/
        telefonrehberi=fopen("a.txt","a+"); /*Dosya ekleme ve okuma modunda açılmaktadır.*/
	do
	{
		printf("\n Rehberinize Eklenecek Kisi Hakkindaki Asagidaki Bilgileri Eksiksiz Doldurunuz.\n\n");
		printf(" ------------------------------------------------------------------\n");
		printf(" UYARI: Telefon Numaralari Arasina Bosluk Birakmayiniz!\n");
		printf(" UYARI: Bilgi Sahibi Olmadiginiz Yerleri \"Yok\" Seklinde Belirtiniz!\n");
		printf(" UYARI: Istenen Bilgileri Doldurmadan Gecmeyiniz!\n");
		printf(" ------------------------------------------------------------------\n");
                printf("\n Eklenecek Kisinin Adini Giriniz:");
		scanf("%s",kisiler[sayac].ad); /*Kullanıcının girdiği veriler struct yapılarına aktarılmaktadır.*/
		fflush(stdin); /*Girilen veri değişkene aktarıldıktan sonra gerekli alan boşaltılmaktadır.*/
		printf("\n Eklenecek Kisinin Soyadini Giriniz:");
		scanf("%s",kisiler[sayac].soyad);
		fflush(stdin);
		ceptel:
		printf("\n Eklenecek Kisinin Cep Telefonu Numarasini Giriniz:");
		scanf("%s",kisiler[sayac].ceptel);
		fflush(stdin);
		printf("\n Eklencek Kisinin Ev Telefonu Numarasini Giriniz:");
		scanf("%s",kisiler[sayac].evtel);
		fflush(stdin);
		printf("\n Eklenecek Kisinin Is Telefonu Numarasini Giriniz:");
		scanf("%s",kisiler[sayac].istel);
		fflush(stdin);
		printf("\n Eklenecek Kisinin E-Posta Bilgilerini Giriniz:");
		scanf("%s",kisiler[sayac].eposta);
		fflush(stdin);
		printf("\n Eklencek Kisinin Adres (Sehir) Bilgilerini Giriniz:");
		scanf("%s",kisiler[sayac].adres);
		fflush(stdin);
		printf("\n Eklenecek Kisinin Dogum Tarihini (Gun.Ay.Yil Seklinde) Giriniz:");
		scanf("%s",kisiler[sayac].dogumtarihi);
		fflush(stdin);
		printf("\n ------------------------------------------------------------------------------");
		printf("\n Kisi Ekleme Islemine Devam Etmek Icin 'E' veya 'e' Tusuna Basiniz.\n Eklediginiz Kisiyi Kaydetmek ve Menuye Donmek Icin Herhangi Bir Tusa Basiniz.");/*Kullanıcıya kişi ekleme işlemine devam edip etmeyeceği sorulur.*/
                kontrol=getch(); /*Kullanıcının girdiği karakter kontrol değişkenine aktarılmaktadır.*/
		printf("\n\n Eklediginiz Kisi Rehberinize Kaydedilmektedir. Lutfen Bekleyiniz...");
		Sleep(2000);
		system("CLS");
		printf("\n Eklediginiz Kisi Rehberinize Basariyla Kaydedilmisitir.");
		Sleep(2000);
		system("CLS");
		fprintf(telefonrehberi,"%s\t%s\t%s\t%s\t%s\t%s\t%s\t%s\n",kisiler[sayac].ad,kisiler[sayac].soyad,kisiler[sayac].ceptel,kisiler[sayac].evtel,kisiler[sayac].istel,kisiler[sayac].eposta,kisiler[sayac].adres,kisiler[sayac].dogumtarihi);
		sayac++; /*Kullanıcı tarafından girilmiş olan veriler telefonrehberi'ndeki dosyaya yazılmaktadır.*/
    }
	while(kontrol=='E' || kontrol=='e'); /*Kullanıcının istemesi halinde kişi ekleme işlemine devam edilecektir.*/
	fclose(telefonrehberi); /*telefonrehberi adlı dosya kapatılmaktadır.*/
}

void kisigoruntule() /*Kişi görüntüleme fonksiyonu.*/
{
	FILE *telefonrehberi; /*File tipinde, telefonrehberi adında bir pointer tanımlanmaktadır.*/
	telefonrehberi=fopen("a.txt","r"); /*Dosya önceki verileri okumak için açılmaktadır.*/
	int a=0,i;
	if((telefonrehberi=fopen("a.txt","r"))==NULL)
		printf(" Kayit Bulunamadi...");         
	else
	{
		printf("\n Rehberinize Kayitli Kisiler Asagida Listelenmistir.");
		printf("\n\n================================================================================");
		while(!feof(telefonrehberi)) /*telefonrehberi'ndeki veriler dosya sonuna kadar okunmaktadır.*/
		{
			fscanf(telefonrehberi,"%s%s%s%s%s%s%s%s",yedek[a].ad,yedek[a].soyad,yedek[a].ceptel,yedek[a].evtel,yedek[a].istel,yedek[a].eposta,yedek[a].adres,yedek[a].dogumtarihi);//veriler dosyadan okunuyor
			a++;     
		}

  		for(i=0;i<(a-1);i++) /*Telefon Rehberindeki tüm kisiler görüntülenecek şekilde döngü devam etmektedir.*/
		{	
			printf("\n %d Numarali Telefon Kaydi",i+1);
			printf("\n ------------------------\n");
			printf("\n 1. Adi            : %s\n",yedek[i].ad);
			printf("\n 2. Soyadi         : %s\n",yedek[i].soyad);
			printf("\n 3. Cep Telefonu   : %s\n",yedek[i].ceptel);
			printf("\n 4. Ev Telefonu    : %s\n",yedek[i].evtel);
			printf("\n 5. Is Telefonu    : %s\n",yedek[i].istel);
			printf("\n 6. E-Posta Adresi : %s\n",yedek[i].eposta);
			printf("\n 7. Adresi         : %s\n",yedek[i].adres);
			printf("\n 8. Dogum Tarihi   : %s\n",yedek[i].dogumtarihi);
	  		printf("\n================================================================================");
			fclose(telefonrehberi); /*telefonrehberi adlı dosya kapatılmaktadır.*/
		}
	}
}

void kisiguncelle() /*Kişi güncelleme fonksiyonu.*/
{
	int a=0,i;
	int secenek;
	char guncellenenad[BUFSIZ];
	char guncellenensoyad[BUFSIZ];
	FILE *telefonrehberi; /*File tipinde, telefonrehberi adında bir pointer tanımlanmaktadır.*/
	printf("\n       ==Guncelleme Secenekleri==");
	printf("\n --------------------------------------\n");
	printf(" (1) -Cep Telefonu Numarasi Guncelleme-\n");
	printf(" (2) -Ev Telefonu Numarasi Guncelleme-\n");
	printf(" (3) -Is Telefonu Numarasi Guncelleme-\n");
	printf(" (4) -E-Posta Adresi Guncelleme-\n");
	printf(" (5) -Adres Guncelleme-\n");
	printf(" (6) -Guncelleme Yapmadan Menuye Don-\n");
	printf(" --------------------------------------\n");
	printf("\n Gerceklestirmek Istediginiz Secenegi Seciniz.\n"); /*Kullanıcının güncelleme yapmak istediği seçenek istenmektedir.*/
	printf("\n Seciminiz:");
	scanf("%d",&secenek);
	fflush(stdin); /*Girilen veri değişkene aktarıldıktan sonra gerekli alan boşaltılmaktadır.*/
	switch(secenek) /*Güncelleme seçenekleri switch-case yapısıyla oluşturulmuştur.*/
	{	case 1:
			system("CLS");
			printf("\n -Kisinin Cep Telefonu Numarasini Guncelleme-\n");
			printf(" --------------------------------------------");
			printf("\n\n -----------------------------------------------------------------------------");
			printf("\n UYARI: Eger Rehberinizde, Girmis Oldugunuz Ad ve Soyadda Bir Kisi Bulunamazsa \n        Direkt Olarak Ana Menu'ye Yonlendirileceksiniz.\n");
			printf(" -----------------------------------------------------------------------------");
			printf("\n\n Cep Telefonu Numarasi Guncellecek Kisinin Adini Giriniz:");
			scanf("\t%s",guncellenenad);
			fflush(stdin); /*Girilen veri değişkene aktarıldıktan sonra gerekli alan boşaltılmaktadır.*/
			printf("\n Cep Telefonu Numarasi Guncellecek Kisinin Soyadini Giriniz:");
			scanf("\t%s",guncellenensoyad);
			fflush(stdin); /*Girilen veri değişkene aktarıldıktan sonra gerekli alan boşaltılmaktadır.*/
			telefonrehberi=fopen("a.txt","r"); /*Dosya önceki verileri okumak için açılmaktadır.*/
			while(!feof(telefonrehberi)) /*telefonrehberi'ndeki veriler dosya sonuna kadar okunmaktadır.*/
			{
				fscanf(telefonrehberi,"%s%s%s%s%s%s%s%s",yedek[a].ad,yedek[a].soyad,yedek[a].ceptel,yedek[a].evtel,yedek[a].istel,yedek[a].eposta,yedek[a].adres,yedek[a].dogumtarihi);//veriler dosyadan okunuyor
				a++;
     		}
			for(i=0;i<(a-1);i++)
			{
				if(strcmp(guncellenenad,yedek[i].ad)==0 && strcmp(guncellenensoyad,yedek[i].soyad)==0) /*Kullanıcının bilgilerini güncellemek istediği kişinin adı ve soyadı, yedek yapısıyla kontrol edilmektedir.*/
				{ 
					printf("\n Guncellemek Istediginiz Kisi: \"%s %s\" ",guncellenenad,guncellenensoyad);
					printf("\n\n (Kisi %d Nolu Kayitta Bulunmaktadir.)\n\n Guncellenecek Kisinin Yeni Cep Telefonu Numarasini Giriniz:",i+1); /*Güncellenecek kişinin yeni cep telefon numarası istenmektedir.*/ 
					scanf("%s",yedek[i].ceptel); /*Kullanıcının girdiği yeni cep telefonu numarası struct yapısına aktarılmaktadır.*/
					fflush(stdin); /*Girilen veri değişkene aktarıldıktan sonra gerekli alan boşaltılmaktadır.*/
					printf("\n Bilgilerini Guncellediginiz Kisi Rehberinize Kaydedilmektedir.\n Lutfen Bekleyiniz...");
					Sleep(2000);
					system("CLS");
					printf("\n Bilgilerini Guncellediginiz Kisi Rehberinize Basariyla Kaydedilmisitir.");
					Sleep(2000);
					system("CLS");
				}
			fclose(telefonrehberi); /*Sadece okunmak için açılan dosya kapatılmaktadır.*/
			FILE *telefonrehberi2; /*File tipinde, telefonrehberi2 adında bir pointer tanımlanmaktadır.*/
			telefonrehberi2=fopen("a.txt","w"); /*Dosya, önceki veriler silinecek ve üzerine yazılacak şekilde açılmaktadır.*/
			int i2;
			for(i2=0;i2<(a-1);i2++) /*Rehberin son şekli dosyaya yazılmaktadır.*/
			{
				fprintf(telefonrehberi2,"%s\t%s\t%s\t%s\t%s\t%s\t%s\t%s\n",yedek[i2].ad,yedek[i2].soyad,yedek[i2].ceptel,yedek[i2].evtel,yedek[i2].istel,yedek[i2].eposta,yedek[i2].adres,yedek[i2].dogumtarihi);
			}
			fclose(telefonrehberi2); /*Önceki veriler silinecek ve üzerine yazılacak şekilde açılan dosya kapatılmaktadır.*/

			}
			unlink("telefonrehberi"); /*telefonrehberi adlı dosya silinmektedir.*/
			rename("telefonrehberi2","telefonrehberi"); /*telefonrehberi2'nin yeni ismi telefonrehberi olarak değiştirilmektedir. */
			break;

		case 2:
			system("CLS");
			printf("\n -Kisinin Ev Telefonu Numarasini Guncelleme-\n");
			printf(" -------------------------------------------");
			printf("\n\n -----------------------------------------------------------------------------");
			printf("\n UYARI: Eger Rehberinizde, Girmis Oldugunuz Ad ve Soyadda Bir Kisi Bulunamazsa \n        Direkt Olarak Ana Menu'ye Yonlendirileceksiniz.\n");
			printf(" -----------------------------------------------------------------------------");
			printf("\n\n Ev Telefonu Numarasi Guncellecek Kisinin Adini Giriniz:");
			scanf("\t%s",guncellenenad);
			fflush(stdin); /*Girilen veri değişkene aktarıldıktan sonra gerekli alan boşaltılmaktadır.*/
			printf("\n Ev Telefonu Numarasi Guncellecek Kisinin Soyadini Giriniz:");
			scanf("\t%s",guncellenensoyad);
			fflush(stdin); /*Girilen veri değişkene aktarıldıktan sonra gerekli alan boşaltılmaktadır.*/
			telefonrehberi=fopen("a.txt","r"); /*Dosya önceki verileri okumak için açılmaktadır.*/
			while(!feof(telefonrehberi)) /*telefonrehberi'ndeki veriler dosya sonuna kadar okunmaktadır.*/
			{
				fscanf(telefonrehberi,"%s%s%s%s%s%s%s%s",yedek[a].ad,yedek[a].soyad,yedek[a].ceptel,yedek[a].evtel,yedek[a].istel,yedek[a].eposta,yedek[a].adres,yedek[a].dogumtarihi);
				a++;
     		        }
			for(i=0;i<(a-1);i++)
			{
				if(strcmp(guncellenenad,yedek[i].ad)==0 && strcmp(guncellenensoyad,yedek[i].soyad)==0) /*Kullanıcının bilgilerini güncellemek istediği kişinin adı ve soyadı, yedek yapısıyla kontrol edilmektedir.*/
				{ 

					printf("\n Guncellemek Istediginiz Kisi: \"%s %s\" ",guncellenenad,guncellenensoyad);
					printf("\n\n (Kisi %d Nolu Kayitta Bulunmaktadir.)\n\n Guncellenecek Kisinin Yeni Ev Telefonu Numarasini Giriniz:",i+1); /*Güncellenecek kişinin yeni ev telefonu numarası istenmektedir.*/ 
					scanf("%s",yedek[i].evtel); /*Kullanıcının girdiği yeni ev telefonu numarası struct yapısına aktarılmaktadır.*/
					fflush(stdin); /*Girilen veri değişkene aktarıldıktan sonra gerekli alan boşaltılmaktadır.*/
					printf("\n Bilgilerini Guncellediginiz Kisi Rehberinize Kaydedilmektedir.\n Lutfen Bekleyiniz...");
					Sleep(2000);
					system("CLS");
					printf("\n Bilgilerini Guncellediginiz Kisi Rehberinize Basariyla Kaydedilmisitir.");
					Sleep(2000);
					system("CLS");
				}
			fclose(telefonrehberi); /*Sadece okunmak için açılan dosya kapatılmaktadır.*/
			FILE *telefonrehberi2; /*File tipinde, telefonrehberi2 adında bir pointer tanımlanmaktadır.*/
			telefonrehberi2=fopen("a.txt","w"); /*Dosya, önceki veriler silinecek ve üzerine yazılacak şekilde açılmaktadır.*/
			int i2;
			for(i2=0;i2<(a-1);i2++) /*Rehberin son şekli dosyaya yazılmaktadır.*/
			{
				fprintf(telefonrehberi2,"%s\t%s\t%s\t%s\t%s\t%s\t%s\t%s\n",yedek[i2].ad,yedek[i2].soyad,yedek[i2].ceptel,yedek[i2].evtel,yedek[i2].istel,yedek[i2].eposta,yedek[i2].adres,yedek[i2].dogumtarihi);
			}
			fclose(telefonrehberi2); /*Önceki veriler silinecek ve üzerine yazılacak şekilde açılan dosya kapatılmaktadır.*/

			}
			unlink("telefonrehberi"); /*telefonrehberi adlı dosya silinmektedir.*/
			rename("telefonrehberi2","telefonrehberi"); /*telefonrehberi2'nin yeni ismi telefonrehberi olarak değiştirilmektedir.*/
			break;

		case 3:
			system("CLS");
			printf("\n -Kisinin Is Telefonu Numarasini Guncelleme-\n");
			printf(" -------------------------------------------");
			printf("\n\n -----------------------------------------------------------------------------");
			printf("\n UYARI: Eger Rehberinizde, Girmis Oldugunuz Ad ve Soyadda Bir Kisi Bulunamazsa \n        Direkt Olarak Ana Menu'ye Yonlendirileceksiniz.\n");
			printf(" -----------------------------------------------------------------------------");
			printf("\n\n Is Telefonu Numarasi Guncellecek Kisinin Adini Giriniz:");
			scanf("\t%s",guncellenenad);
			fflush(stdin); /*Girilen veri değişkene aktarıldıktan sonra gerekli alan boşaltılmaktadır.*/
			printf("\n Is Telefonu Numarasi Guncellecek Kisinin Soyadini Giriniz:");
			scanf("\t%s",guncellenensoyad);
			fflush(stdin); /*Girilen veri değişkene aktarıldıktan sonra gerekli alan boşaltılmaktadır.*/
			telefonrehberi=fopen("a.txt","r"); /*Dosya önceki verileri okumak için açılmaktadır.*/
			while(!feof(telefonrehberi)) /*telefonrehberi'ndeki veriler dosya sonuna kadar okunmaktadır.*/
			{
				fscanf(telefonrehberi,"%s%s%s%s%s%s%s%s",yedek[a].ad,yedek[a].soyad,yedek[a].ceptel,yedek[a].evtel,yedek[a].istel,yedek[a].eposta,yedek[a].adres,yedek[a].dogumtarihi);
				a++;
     		        }
			for(i=0;i<(a-1);i++)
			{ 
				if(strcmp(guncellenenad,yedek[i].ad)==0 && strcmp(guncellenensoyad,yedek[i].soyad)==0) /*Kullanıcının bilgilerini güncellemek istediği kişinin adı ve soyadı, yedek yapısıyla kontrol edilmektedir.*/
				{ 

					printf("\n Guncellemek Istediginiz Kisi: \"%s %s\" ",guncellenenad,guncellenensoyad);
					printf("\n\n (Kisi %d Nolu Kayitta Bulunmaktadir.)\n\n Guncellenecek Kisinin Yeni Is Telefonu Numarasini Giriniz:",i+1); /*Güncellenecek kişinin yeni iş telefonu numarası istenmektedir.*/ 
					scanf("%s",yedek[i].istel); /*Kullanıcının girdiği yeni iş telefonu numarası struct yapısına aktarılmaktadır.*/
					fflush(stdin); /*Girilen veri değişkene aktarıldıktan sonra gerekli alan boşaltılmaktadır.*/
					printf("\n Bilgilerini Guncellediginiz Kisi Rehberinize Kaydedilmektedir.\n Lutfen Bekleyiniz...");
					Sleep(2000);
					system("CLS");
					printf("\n Bilgilerini Guncellediginiz Kisi Rehberinize Basariyla Kaydedilmisitir.");
					Sleep(2000);
					system("CLS");
				}
			fclose(telefonrehberi); /*Sadece okunmak için açılan dosya kapatılmaktadır.*/
			FILE *telefonrehberi2; /*File tipinde, telefonrehberi2 adında bir pointer tanımlanmaktadır.*/
			telefonrehberi2=fopen("a.txt","w");/*Dosya, önceki veriler silinecek ve üzerine yazılacak şekilde açılmaktadır.*/
			int i2;
			for(i2=0;i2<(a-1);i2++) /*Rehberin son şekli dosyaya yazılmaktadır.*/
			{
				fprintf(telefonrehberi2,"%s\t%s\t%s\t%s\t%s\t%s\t%s\t%s\n",yedek[i2].ad,yedek[i2].soyad,yedek[i2].ceptel,yedek[i2].evtel,yedek[i2].istel,yedek[i2].eposta,yedek[i2].adres,yedek[i2].dogumtarihi);
			}
			fclose(telefonrehberi2); /*Önceki veriler silinecek ve üzerine yazılacak şekilde açılan dosya kapatılmaktadır.*/

			}
			unlink("telefonrehberi"); /*telefonrehberi adlı dosya silinmektedir.*/
			rename("telefonrehberi2","telefonrehberi"); /*telefonrehberi2'nin yeni ismi telefonrehberi olarak değiştirilmektedir. */
			break;

		case 4:
			system("CLS");
			printf("\n -Kisinin E-Posta Adresini Guncelleme-\n");
			printf(" -------------------------------------");
			printf("\n\n -----------------------------------------------------------------------------");
			printf("\n UYARI: Eger Rehberinizde, Girmis Oldugunuz Ad ve Soyadda Bir Kisi Bulunamazsa \n        Direkt Olarak Ana Menu'ye Yonlendirileceksiniz.\n");
			printf(" -----------------------------------------------------------------------------");
			printf("\n\n E-Posta Adresi Guncellecek Kisinin Adini Giriniz:");
			scanf("\t%s",guncellenenad);
			fflush(stdin); /*Girilen veri değişkene aktarıldıktan sonra gerekli alan boşaltılmaktadır.*/
			printf("\n E-Posta Adresi Guncellecek Kisinin Soyadini Giriniz:");
			scanf("\t%s",guncellenensoyad);
			fflush(stdin); /*Girilen veri değişkene aktarıldıktan sonra gerekli alan boşaltılmaktadır.*/
			telefonrehberi=fopen("a.txt","r"); /*Dosya önceki verileri okumak için açılmaktadır.*/
			while(!feof(telefonrehberi)) /*telefonrehberi'ndeki veriler dosya sonuna kadar okunmaktadır.*/
			{
				fscanf(telefonrehberi,"%s%s%s%s%s%s%s%s",yedek[a].ad,yedek[a].soyad,yedek[a].ceptel,yedek[a].evtel,yedek[a].istel,yedek[a].eposta,yedek[a].adres,yedek[a].dogumtarihi);
				a++;
   			}
			for(i=0;i<(a-1);i++)
			{ 
				if(strcmp(guncellenenad,yedek[i].ad)==0 && strcmp(guncellenensoyad,yedek[i].soyad)==0) /*Kullanıcının bilgilerini güncellemek istediği kişinin adı ve soyadı, yedek yapısıyla kontrol edilmektedir.*/
				{ 

					printf("\n Guncellemek Istediginiz Kisi: \"%s %s\" ",guncellenenad,guncellenensoyad);
					printf("\n\n (Kisi %d Nolu Kayitta Bulunmaktadir.)\n\n Guncellenecek Kisinin Yeni E-Posta Adresini Giriniz:",i+1); /*Güncellenecek kişinin yeni E-posta adresi istenmektedir.*/ 
					scanf("%s",yedek[i].eposta); /*Kullanıcının girdiği yeni E-posta adresi struct yapısına aktarılmaktadır.*/
					fflush(stdin); /*Girilen veri değişkene aktarıldıktan sonra gerekli alan boşaltılmaktadır.*/
					printf("\n Bilgilerini Guncellediginiz Kisi Rehberinize Kaydedilmektedir.\n Lutfen Bekleyiniz...");
					Sleep(2000);
					system("CLS");
					printf("\n Bilgilerini Guncellediginiz Kisi Rehberinize Basariyla Kaydedilmisitir.");
					Sleep(2000);
					system("CLS");
				}
			fclose(telefonrehberi); /*Sadece okunmak için açılan dosya kapatılmaktadır.*/
			FILE *telefonrehberi2; /*File tipinde, telefonrehberi2 adında bir pointer tanımlanmaktadır.*/
			telefonrehberi2=fopen("a.txt","w"); /*Dosya, önceki veriler silinecek ve üzerine yazılacak şekilde açılmaktadır.*/
			int i2;
			for(i2=0;i2<(a-1);i2++) /*Rehberin son şekli dosyaya yazılmaktadır.*/
			{
				fprintf(telefonrehberi2,"%s\t%s\t%s\t%s\t%s\t%s\t%s\t%s\n",yedek[i2].ad,yedek[i2].soyad,yedek[i2].ceptel,yedek[i2].evtel,yedek[i2].istel,yedek[i2].eposta,yedek[i2].adres,yedek[i2].dogumtarihi);
			}
			fclose(telefonrehberi2); /*Önceki veriler silinecek ve üzerine yazılacak şekilde açılan dosya kapatılmaktadır.*/

			}
			unlink("telefonrehberi"); /*telefonrehberi adlı dosya silinmektedir.*/
			rename("telefonrehberi2","telefonrehberi"); /*telefonrehberi2'nin yeni ismi telefonrehberi olarak değiştirilmektedir. */
			break;

		case 5:
			system("CLS");
			printf("\n -Kisinin Adresini Guncelleme-\n");
			printf(" -----------------------------");
			printf("\n\n -----------------------------------------------------------------------------");
			printf("\n UYARI: Eger Rehberinizde, Girmis Oldugunuz Ad ve Soyadda Bir Kisi Bulunamazsa \n        Direkt Olarak Ana Menu'ye Yonlendirileceksiniz.\n");
			printf(" -----------------------------------------------------------------------------");
			printf("\n\n Adresi Guncellecek Kisinin Adini Giriniz:");
			scanf("\t%s",guncellenenad);
			fflush(stdin); /*Girilen veri değişkene aktarıldıktan sonra gerekli alan boşaltılmaktadır.*/
			printf("\n Adresi Guncellecek Kisinin Soyadini Giriniz:");
			scanf("\t%s",guncellenensoyad);
			fflush(stdin); /*Girilen veri değişkene aktarıldıktan sonra gerekli alan boşaltılmaktadır.*/
			telefonrehberi=fopen("a.txt","r"); /*Dosya önceki verileri okumak için açılmaktadır.*/
			while(!feof(telefonrehberi)) /*telefonrehberi'ndeki veriler dosya sonuna kadar okunmaktadır.*/
			{
				fscanf(telefonrehberi,"%s%s%s%s%s%s%s%s",yedek[a].ad,yedek[a].soyad,yedek[a].ceptel,yedek[a].evtel,yedek[a].istel,yedek[a].eposta,yedek[a].adres,yedek[a].dogumtarihi);
				a++;
     		        }
			for(i=0;i<(a-1);i++)
			{ 
				if(strcmp(guncellenenad,yedek[i].ad)==0 && strcmp(guncellenensoyad,yedek[i].soyad)==0) /*Kullanıcının bilgilerini güncellemek istediği kişinin adı ve soyadı, yedek yapısıyla kontrol edilmektedir.*/
			        { 

					printf("\n Guncellemek Istediginiz Kisi: \"%s %s\" ",guncellenenad,guncellenensoyad);
					printf("\n\n (Kisi %d Nolu Kayitta Bulunmaktadir.)\n\n Guncellenecek Kisinin Yeni Adresini Giriniz:",i+1); /*Güncellenecek kişinin yeni adresi istenmektedir.*/ 
					scanf("%s",yedek[i].adres); /*Kullanıcının girdiği yeni adres struct yapısına aktarılmaktadır.*/
					fflush(stdin); /*Girilen veri değişkene aktarıldıktan sonra gerekli alan boşaltılmaktadır.*/
					printf("\n Bilgilerini Guncellediginiz Kisi Rehberinize Kaydedilmektedir.\n Lutfen Bekleyiniz...");
					Sleep(2000);
					system("CLS");
					printf("\n Bilgilerini Guncellediginiz Kisi Rehberinize Basariyla Kaydedilmisitir.");
					Sleep(2000);
					system("CLS");
				}
			fclose(telefonrehberi); /*Sadece okunmak için açılan dosya kapatılmaktadır.*/
			FILE *telefonrehberi2; /*File tipinde, telefonrehberi2 adında bir pointer tanımlanmaktadır.*/
			telefonrehberi2=fopen("a.txt","w"); /*Dosya, önceki veriler silinecek ve üzerine yazılacak şekilde açılmaktadır.*/
			int i2;
			for(i2=0;i2<(a-1);i2++) /*Rehberin son şekli dosyaya yazılmaktadır.*/
			{
				fprintf(telefonrehberi2,"%s\t%s\t%s\t%s\t%s\t%s\t%s\t%s\n",yedek[i2].ad,yedek[i2].soyad,yedek[i2].ceptel,yedek[i2].evtel,yedek[i2].istel,yedek[i2].eposta,yedek[i2].adres,yedek[i2].dogumtarihi);
			}
			fclose(telefonrehberi2); /*Önceki veriler silinecek ve üzerine yazılacak şekilde açılan dosya kapatılmaktadır.*/

			}
			unlink("telefonrehberi"); /*telefonrehberi adlı dosya silinmektedir.*/
			rename("telefonrehberi2","telefonrehberi"); /*telefonrehberi2'nin yeni ismi telefonrehberi olarak değiştirilmektedir. */
			break;

		case 6: /*Kullanıcının güncelleme yapmadan menüye dönmesi sağlanmaktadır.*/
			system("CLS");
			main();
			break;

		default: /*Kullanıcının 1,2,3,4,5 veya 6 dışında bir secenek girmesiyle default yapısı çalışmaktadır.*/
			printf("\n Boyle Bir Secenek Bulunmamaktadir.\n");
			printf(" Lutfen Bekleyiniz...");
			Sleep(2000);
			system("CLS");
			main();
			break;
	}
}

void kisisil() /*Kişi silme fonksiyonu.*/
{ 
	char silinecekad[BUFSIZ];
	char silineceksoyad[BUFSIZ];
	int karar;
	printf("\n Telefon Rehberinizden Silinecek Kisinin Adini Giriniz:");
	scanf("%s",silinecekad);
	fflush(stdin); /*Girilen veri değişkene aktarıldıktan sonra gerekli alan boşaltılmaktadır.*/
	printf("\n Telefon Rehberinizden Silinecek Kisinin Soyadini Giriniz:");
	scanf("%s",silineceksoyad);
	fflush(stdin); /*Girilen veri değişkene aktarıldıktan sonra gerekli alan boşaltılmaktadır.*/
	FILE *telefonrehberi; /*File tipinde, telefonrehberi adında bir pointer tanımlanmaktadır.*/
	telefonrehberi=fopen("a.txt","r"); /*Dosya sadece okunmak için açılmaktadır.*/
	if((telefonrehberi=fopen("a.txt","r"))==NULL)
		printf(" Kayit Bulunamadi...");         
	else
	{ 
		printf("\n\n================================================================================"); 
		int a=0,i;
		while(!feof(telefonrehberi)) /*telefonrehberi'ndeki veriler dosya sonuna kadar okunmaktadır.*/
		{
			fscanf(telefonrehberi,"%s%s%s%s%s%s%s%s",yedek[a].ad,yedek[a].soyad,yedek[a].ceptel,yedek[a].evtel,yedek[a].istel,yedek[a].eposta,yedek[a].adres,yedek[a].dogumtarihi);
			a++;
		}
		for(i=0;i<(a-1);i++) /*Bu döngüyle kullanıcının silmek istediği kişi, rehberde kayitli olduğu takdirde kisinin bilgileri görüntülenmektedir.*/
		{ 
			if(strcmp(silinecekad,yedek[i].ad)==0 && strcmp(silineceksoyad,yedek[i].soyad)==0)
			{
				printf("\n %d Numarali Telefon Kaydi",i+1);
				printf("\n ------------------------\n");
				printf("\n 1. Adi            : %s\n",yedek[i].ad);
				printf("\n 2. Soyadi         : %s\n",yedek[i].soyad);
				printf("\n 3. Cep Telefonu   : %s\n",yedek[i].ceptel);
				printf("\n 4. Ev Telefonu    : %s\n",yedek[i].evtel);
				printf("\n 5. Is Telefonu    : %s\n",yedek[i].istel);
				printf("\n 6. E-Posta Adresi : %s\n",yedek[i].eposta);
				printf("\n 7. Adresi         : %s\n",yedek[i].adres);
				printf("\n 8. Dogum Tarihi   : %s\n",yedek[i].dogumtarihi);
     			printf("\n================================================================================");		 
			}
			else
			{
			   continue;
			}
		}
		fclose(telefonrehberi); /*Sadece okunmak için açılan dosya kapatılmaktadır.*/
		printf("\n\n Silme Islemini Gerceklestirmeden Once Asagidaki Uyarilari Okuyunuz!");
		printf("\n ------------------------------------------------------------------------------\n");
		printf(" UYARILAR:\n\n");
		printf(" Telefon Rehberinizden Silmek Istediginiz Kisinin Kaydi Yukarida Bulunmaktadir.");
		printf("\n Herhangi Bir Kayit Gorunmuyorsa Silmek Istediginiz Kisi Rehberinizde Kayitli \n Degildir.");
		printf(" Bu durumda (2) Tusuna Basiniz.");
		printf("\n ------------------------------------------------------------------------------\n");
		printf("\n Telefon Rehberinizden Silmek Istediginiz Kisi \"%s %s\" .",silinecekad,silineceksoyad);
		printf("\n\n Bu Kisiyi Gercekten Silmek Istiyor Musunuz? ( (1)-EVET (2)-HAYIR ):");
		scanf("%d",&karar);
		fflush(stdin); /*Girilen veri değişkene aktarıldıktan sonra gerekli alan boşaltılmaktadır.*/
		if(karar==1) /*Kullanıcının kisiyi silme işlemini onaylaması ile if yapısı çalışmaktadır.*/
		{
			FILE *telefonrehberi; /*File tipinde, telefonrehberi adında bir pointer tanımlanmaktadır.*/
			telefonrehberi=fopen("a.txt","r"); /*Dosya sadece okunmak için açılmaktadır.*/
			int a=0,i,kacinci;
			while(!feof(telefonrehberi)) /*telefonrehberi'ndeki veriler dosya sonuna kadar okunmaktadır.*/
			{
				fscanf(telefonrehberi,"%s%s%s%s%s%s%s%s",yedek[a].ad,yedek[a].soyad,yedek[a].ceptel,yedek[a].evtel,yedek[a].istel,yedek[a].eposta,yedek[a].adres,yedek[a].dogumtarihi);
				a++;        
			}
 
			for(i=0;i<=a;i++)
			{ 
				if(strcmp(silinecekad,yedek[i].ad)==0 && strcmp(silineceksoyad,yedek[i].soyad)==0) /*Kullanıcının rehberden silmek istediği kişinin adı ve soyadı, yedek yapısıyla kontrol edilmektedir.*/
				{ 
					kacinci=i;
				}
			}

			for(i=0;i<=(kacinci);i++) /*Silinecek kayıt dahil buraya kadarki kayıtlar okunup silinecek dosyasına kopyalanmaktadır.*/
			{
				strcpy(silinecek[i].ad,yedek[i].ad);
				strcpy(silinecek[i].soyad,yedek[i].soyad);
				strcpy(silinecek[i].ceptel,yedek[i].ceptel);
				strcpy(silinecek[i].evtel,yedek[i].evtel);
				strcpy(silinecek[i].istel,yedek[i].istel);
				strcpy(silinecek[i].eposta,yedek[i].eposta);
				strcpy(silinecek[i].adres,yedek[i].adres);
				strcpy(silinecek[i].dogumtarihi,yedek[i].dogumtarihi);
			 }
			for(i=(kacinci+1);i<a;i++) /*Silinecek kayıttan sonraki kalan kayıtlar, okunup silinecek dosyasına, silinecek kaydın üzerine sırayla kopyalanmaktadır.*/
			{
				strcpy(silinecek[i-1].ad,yedek[i].ad);
				strcpy(silinecek[i-1].soyad,yedek[i].soyad);
				strcpy(silinecek[i-1].ceptel,yedek[i].ceptel);
				strcpy(silinecek[i-1].evtel,yedek[i].evtel);
				strcpy(silinecek[i-1].istel,yedek[i].istel);
				strcpy(silinecek[i-1].eposta,yedek[i].eposta);
				strcpy(silinecek[i-1].adres,yedek[i].adres);
				strcpy(silinecek[i-1].dogumtarihi,yedek[i].dogumtarihi);
			}
			fclose(telefonrehberi); /*Sadece okunmak için açılan dosya kapatılmaktadır.*/
			FILE *telefonrehberi2; /*File tipinde, telefonrehberi2 adında bir pointer tanımlanmaktadır.*/
			telefonrehberi2=fopen("a.txt","w"); /*Dosya sadece yazılmak için açılmaktadır.*/
			int i2;silinecek;
	 		for(i2=0;i2<(a-2);i2++) /*1.for ve 2.for döngüsüyle silinecek dosyasına kopyalanmış veriler telefenrehberi2 dosyasına yazılmaktadır.*/
			{ 
				fprintf(telefonrehberi2,"%s\t%s\t%s\t%s\t%s\t%s\t%s\t%s\n",silinecek[i2].ad,silinecek[i2].soyad,silinecek[i2].ceptel,silinecek[i2].evtel,silinecek[i2].istel,silinecek[i2].eposta,silinecek[i2].adres,silinecek[i2].dogumtarihi);		
			} 
			fclose(telefonrehberi2); /*Sadece yazılmak için açılan dosya kapatılmaktadır.*/
			unlink("telefonrehberi"); /*telefonrehberi adlı dosya silinmektedir.*/
			rename("telefonrehberi2","telefonrehberi"); /*telefonrehberi2'nin yeni ismi telefonrehberi olarak değiştirilmektedir.*/
			printf("\n Silme Isleminiz Gerceklesmektedir. Lutfen Bekleyiniz...");
			Sleep(2000);
			system("CLS");
			printf("\n \"%s %s\" Kisisi Telefon Rehberinizden Basariyla Silinmistir.",silinecekad,silineceksoyad);
			Sleep(2000);
			system("CLS");	
		}
		else if(karar==2) /*Kullanıcının silme işlemini onaylamaması durumunda else-if yapısı çalışmaktadır.*/
		{
			printf("\n Silme Islemini Iptal Ettiniz. Ana Menuye Yonlendiriliyorsunuz.");
			Sleep(2000);
			system("CLS");
		}
		else /*Kullanıcının 1 veya 2 dışında bir sayı girmesiyle else yapısı çalışmaktadır.*/ 
		{
			printf("\n Boyle Bir Secenek Bulunmamaktadir.");
			printf("\n Lutfen Bekleyiniz...");
			Sleep(2000);
			system("CLS");
		}
	}
}

void kisiarama() /*Kişi arama fonksiyonu.*/
{
        char arananad[BUFSIZ];
	char aranansoyad[BUFSIZ];
	char arananadres[BUFSIZ];
	char aranandogumtarihi[BUFSIZ];
	int kiriter;
	FILE *telefonrehberi; /*File tipinde, telefonrehberi adında bir pointer tanımlanmıştır.*/
	telefonrehberi=fopen("a.txt","r"); /*Dosya sadece okunmak için açılmaktadır.*/
	if((telefonrehberi=fopen("a.txt","r"))==NULL)
		printf(" Kayit Bulunamadi...");         
	else
	{
		int a=0,i;
		printf("\n  ==Arama Kiriteri Secenekleri==");
		printf("\n --------------------------------\n");
		printf(" (1) -Isme Gore Arama-\n");
		printf(" (2) -Soyada Gore Arama-\n");
		printf(" (3) -Adrese (Sehire) Gore Arama-\n");
		printf(" (4) -Dogum Tarihine Gore Arama-\n");
		printf(" (5) -Arama Yapmadan Menuye Don-\n");
		printf(" --------------------------------\n");
		printf("\n Arama Yapmak Istediginiz Kiriteri Seciniz.\n"); /*Kullanıcının arama yapmak istediği kıriter istenmektedir.*/
		printf("\n Seciminiz:");
		scanf("%d",&kiriter);
		fflush(stdin); /*Girilen veri değişkene aktarıldıktan sonra gerekli alan boşaltılmaktadır.*/
		switch(kiriter) /*Arama kıriteri seçenekleri switch-case yapısıyla oluşturulmuştur.*/
		{
			case 1:
				system("CLS");
				printf("\n -Isme Gore Arama-\n");
				printf(" -----------------");
				printf("\n\n Rehberinizde Aranacak Kisinin Adini Giriniz:");
				scanf("%s",arananad);
				fflush(stdin); /*Girilen veri değişkene aktarıldıktan sonra gerekli alan boşaltılmaktadır.*/
				printf("\n Arama Isleminiz Gerceklesmektedir. Lutfen Bekleyiniz...");
				Sleep(2000);
				system("CLS");
				printf("\n -Kisi Arama- \n");
				printf(" ============\n");
				printf("\n \"%s\" Isimli Kisiler Ile Ilgili Bilgiler Asagida Listelenmistir.",arananad);
				printf("\n\n================================================================================");
				while(!feof(telefonrehberi)) /*telefonrehberi'ndeki veriler dosya sonuna kadar okunmaktadır.*/
				{
					fscanf(telefonrehberi,"%s%s%s%s%s%s%s%s",yedek[a].ad,yedek[a].soyad,yedek[a].ceptel,yedek[a].evtel,yedek[a].istel,yedek[a].eposta,yedek[a].adres,yedek[a].dogumtarihi);//dosyadan veriler okunup yedek yapısına aktarılıyor
					a++;
				}
				for(i=0;i<(a-1);i++)
				{
					if(strcmp(arananad,yedek[i].ad)==0) /*Kullanıcının aramak istediği kişinin adı, yedek yapısıyla kontrol edilmektedir.*/
					{
						printf("\n %d Numarali Telefon Kaydi",i+1);
						printf("\n ------------------------\n");
						printf("\n 1. Adi            : %s\n",yedek[i].ad);
						printf("\n 2. Soyadi         : %s\n",yedek[i].soyad);
						printf("\n 3. Cep Telefonu   : %s\n",yedek[i].ceptel);
						printf("\n 4. Ev Telefonu    : %s\n",yedek[i].evtel);
						printf("\n 5. Is Telefonu    : %s\n",yedek[i].istel);
						printf("\n 6. E-Posta Adresi : %s\n",yedek[i].eposta);
						printf("\n 7. Adresi         : %s\n",yedek[i].adres);
						printf("\n 8. Dogum Tarihi   : %s\n",yedek[i].dogumtarihi);
     					printf("\n================================================================================");				 				 
					}

					else
					{
						continue;
					}

				}
				fclose(telefonrehberi);
				break;

			case 2:
				system("CLS");
				printf("\n -Soyada Gore Arama-\n");
				printf(" -------------------");
				printf("\n\n Rehberinizde Aranacak Kisinin Soyadini Giriniz:");
				scanf("%s",aranansoyad);
				fflush(stdin); /*Girilen veri değişkene aktarıldıktan sonra gerekli alan boşaltılmaktadır.*/
				printf("\n Arama Isleminiz Gerceklesmektedir. Lutfen Bekleyiniz...");
				Sleep(2000);
				system("CLS");
				printf("\n -Kisi Arama- \n");
				printf(" ============\n");
				printf("\n \"%s\" Soyadli Kisiler Ile Ilgili Bilgiler Asagida Listelenmistir.",aranansoyad);
				printf("\n\n================================================================================");
				while(!feof(telefonrehberi)) /*telefonrehberi'ndeki veriler dosya sonuna kadar okunmaktadır.*/
				{
					fscanf(telefonrehberi,"%s%s%s%s%s%s%s%s",yedek[a].ad,yedek[a].soyad,yedek[a].ceptel,yedek[a].evtel,yedek[a].istel,yedek[a].eposta,yedek[a].adres,yedek[a].dogumtarihi);//dosyadan veriler okunup yedek yapısına aktarılıyor
					a++;
				}
				for(i=0;i<(a-1);i++)
				{
					if(strcmp(aranansoyad,yedek[i].soyad)==0) /*Kullanıcının aramak istediği kişinin soyadı, yedek yapısıyla kontrol edilmektedir.*/
					{
						printf("\n %d Numarali Telefon Kaydi",i+1);
						printf("\n ------------------------\n");
						printf("\n 1. Adi            : %s\n",yedek[i].ad);
						printf("\n 2. Soyadi         : %s\n",yedek[i].soyad);
						printf("\n 3. Cep Telefonu   : %s\n",yedek[i].ceptel);
						printf("\n 4. Ev Telefonu    : %s\n",yedek[i].evtel);
						printf("\n 5. Is Telefonu    : %s\n",yedek[i].istel);
						printf("\n 6. E-Posta Adresi : %s\n",yedek[i].eposta);
						printf("\n 7. Adresi         : %s\n",yedek[i].adres);
						printf("\n 8. Dogum Tarihi   : %s\n",yedek[i].dogumtarihi);
     					printf("\n================================================================================");			 				 
					}
					else
					{	   
						continue;
					}

				}
				fclose(telefonrehberi);
				break;

			case 3:
				system("CLS");
				printf("\n -Adrese (Sehire) Gore Arama-\n");
				printf(" ---------------------------");
				printf("\n\n Rehberinizde Aranacak Kisinin Adresini (Sehir Bilgilerini) Giriniz:");
				scanf("%s",arananadres);
				fflush(stdin); /*Girilen veri değişkene aktarıldıktan sonra gerekli alan boşaltılmaktadır.*/
				printf("\n Arama Isleminiz Gerceklesmektedir. Lutfen Bekleyiniz...");
				Sleep(2000);
				system("CLS");
				printf("\n -Kisi Arama- \n");
				printf(" ============\n");
				printf("\n \"%s\" Adresli Kisiler Ile Ilgili Bilgiler Asagida Listelenmistir.",arananadres);
				printf("\n\n================================================================================");
				while(!feof(telefonrehberi)) /*telefonrehberi'ndeki veriler dosya sonuna kadar okunmaktadır.*/
				{
					fscanf(telefonrehberi,"%s%s%s%s%s%s%s%s",yedek[a].ad,yedek[a].soyad,yedek[a].ceptel,yedek[a].evtel,yedek[a].istel,yedek[a].eposta,yedek[a].adres,yedek[a].dogumtarihi);//dosyadan veriler okunup yedek yapısına aktarılıyor
					a++;
				}
				for(i=0;i<(a-1);i++)
				{
					if(strcmp(arananadres,yedek[i].adres)==0) /*Kullanıcının aramak istediği kişinin adresi, yedek yapısıyla kontrol edilmektedir.*/
					{
						printf("\n %d Numarali Telefon Kaydi",i+1);
						printf("\n ------------------------\n");		
						printf("\n 1. Adi            : %s\n",yedek[i].ad);
						printf("\n 2. Soyadi         : %s\n",yedek[i].soyad);
						printf("\n 3. Cep Telefonu   : %s\n",yedek[i].ceptel);
						printf("\n 4. Ev Telefonu    : %s\n",yedek[i].evtel);
						printf("\n 5. Is Telefonu    : %s\n",yedek[i].istel);
						printf("\n 6. E-Posta Adresi : %s\n",yedek[i].eposta);
						printf("\n 7. Adresi         : %s\n",yedek[i].adres);
						printf("\n 8. Dogum Tarihi   : %s\n",yedek[i].dogumtarihi);
     					        printf("\n================================================================================"); 	 
					}
					else
					{   
						continue;	
					}

				}
				fclose(telefonrehberi);
				break;

			case 4:
				system("CLS");
				printf("\n -Dogum Tarihine Gore Arama-\n");
				printf(" ---------------------------");
				printf("\n\n Rehberinizde Aranacak Kisinin Dogum Tarihini Giriniz:");
				scanf("%s",aranandogumtarihi);
				fflush(stdin); /*Girilen veri değişkene aktarıldıktan sonra gerekli alan boşaltılmaktadır.*/
				printf("\n Arama Isleminiz Gerceklesmektedir. Lutfen Bekleyiniz...");
				Sleep(2000);
				system("CLS");
				printf("\n -Kisi Arama- \n");
				printf(" ============\n");
				printf("\n \"%s\" Dogum Tarihli Kisiler Ile Ilgili Bilgiler Asagida Listelenmistir.",aranandogumtarihi);
				printf("\n\n================================================================================");
				telefonrehberi=fopen("a.txt","r"); /*Dosya sadece okunmak için açılmaktadır.*/
				while(!feof(telefonrehberi)) /*telefonrehberi'ndeki veriler dosya sonuna kadar okunmaktadır.*/
				{
					fscanf(telefonrehberi,"%s%s%s%s%s%s%s%s",yedek[a].ad,yedek[a].soyad,yedek[a].ceptel,yedek[a].evtel,yedek[a].istel,yedek[a].eposta,yedek[a].adres,yedek[a].dogumtarihi);//dosyadan veriler okunup yedek yapısına aktarılıyor
					a++;
				}
				for(i=0;i<(a-1);i++)
				{
					if(strcmp(aranandogumtarihi,yedek[i].dogumtarihi)==0) /*Kullanıcının aramak istediği kişinin doğum tarihi, yedek yapısıyla kontrol edilmektedir.*/
					{
						printf("\n %d Numarali Telefon Kaydi",i+1);
						printf("\n ------------------------\n");
						printf("\n 1. Adi            : %s\n",yedek[i].ad);
						printf("\n 2. Soyadi         : %s\n",yedek[i].soyad);
						printf("\n 3. Cep Telefonu   : %s\n",yedek[i].ceptel);
						printf("\n 4. Ev Telefonu    : %s\n",yedek[i].evtel);
						printf("\n 5. Is Telefonu    : %s\n",yedek[i].istel);
						printf("\n 6. E-Posta Adresi : %s\n",yedek[i].eposta);
						printf("\n 7. Adresi         : %s\n",yedek[i].adres);
						printf("\n 8. Dogum Tarihi   : %s\n",yedek[i].dogumtarihi);
     					printf("\n================================================================================");			 
					}
					else
					{   
						continue;	
					}

				}
				fclose(telefonrehberi);
				break;

			case 5: /*Kullanıcının arama yapmadan menüye dönmesi sağlanmaktadır.*/
				system("CLS");
				main();
				break;

			default: /*Kullanıcının 1,2,3,4 veya 5 dışında bir secenek girmesiyle default yapısı çalışmaktadır.*/
				printf("\n Boyle Bir Secenek Bulunmamaktadir.");
				printf("\n Lutfen Bekleyiniz...");
				Sleep(2000);
				system("CLS");
				main();
				break;	
		}
    }
}

void cıkıs() /*Telefon rehberinden çıkış işleminin gerçekleştiği ve programın sonlandırıldığı fonksiyon.*/
{    
	int karar;
	system("CLS");
	printf("\n -Cikis- \n");
	printf(" =======\n");
	printf("\n Telefon Rehberinizden Cikis Yapmak Istiyor Musunuz? ( (1)-EVET (2)-HAYIR) ):");
	scanf("%d",&karar);
	fflush(stdin); /*Girilen veri değişkene aktarıldıktan sonra gerekli alan boşaltılmaktadır.*/
	if(karar==1) /*Kullanıcının çıkış işlemini onaylaması halinde if yapısı çalışmaktadır.*/
	{
		printf("\n Cikis Isleminiz Gerceklesmektedir.");
		printf("\n Lutfen Bekleyiniz...");
		Sleep(2000);
		system("CLS");
		printf("\n Telefon Rehberinizden Cikis Yaptiniz.");
		Sleep(2000);
		system("CLS");
		printf("\n Programi Kapatmak Icin Bir Tusa Basiniz.");
		getch();
	}

	else if(karar==2) /*Kullanıcının çıkış işlemini onaylamaması halinde else-if yapısı çalışmaktadır.*/
	{
		system("CLS");
		printf("\n");
		main();
	}

	else /*Kullanıcının 1 veya 2 dısında bir secenek girmesi halinde else yapısı çalışmaktadır.*/
	{
		printf("\n Boyle Bir Secenek Bulunmamaktadir.");
		printf("\n Lutfen Bekleyiniz...");
		Sleep(2000);
		system("CLS");
		printf("\n");
		main();
	}
}
